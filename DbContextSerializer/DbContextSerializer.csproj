<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>DbContextSerializer</Title>
    <Authors>Pierre Philipin</Authors>
    <Company />
    <PackageProjectUrl>https://github.com/PhilipinPierre/DbContextSerializer</PackageProjectUrl>
    <RepositoryUrl>https://github.com/PhilipinPierre/DbContextSerializer</RepositoryUrl>
    <PackageReleaseNotes>First Release, Serialize and deserialize entire DbContext into json files</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.3" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.3" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

</Project>
